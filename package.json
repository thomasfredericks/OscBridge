{
  "name": "oscbridge",
  "version": "1.0.1",
  "description": "A bridge between Serial SLIP, OSC UDP and OSC WebSocket",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": {
    "name": "Thomas O Fredericks",
    "email": "tof@tofstuff.com"
  },
  "license": "ISC",
  "keywords": [
    "Open Sound Control",
    "OSC",
    "Arduino",
    "SLIP",
    "WebSocket"
  ],
  "devDependencies": {
    "electron": "^30.0.3",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "electron-settings": "^4.0.4",
    "express": "^4.17.1",
    "osc": "^2.4.4",
    "serialport": "^10.3.0",
    "ws": "^7.5.3"
  },
  "engines": {
    "node": "v18.17.1",
    "npm": "9.6.7"
  },
  "build": {
    "appId": "com.tofstuff.oscbridge",
    "productName": "OscBridge",
    "publish": {
      "provider": "github",
      "repo": "OscBridge",
      "owner": "thomasfredericks",
      "releaseType": "release"
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "index.html",
      "assets/**/*"
    ],
    "win": {
      "target": [
        "portable"
      ],
      "icon": "assets/icons/win/icon.ico"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/icons/mac/icon.icns",
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "icon": "assets/icons/png/1024x1024.png",
      "target": [
        "zip"
      ]
    }
  }
}
